<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - CSEmployer</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/bootstrap/theme")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="site-title">             
                    <h1>@Html.ActionLink("CS Employer", "Index", "Home")</h1>
                </div>               
                <div class="top-nav">
                    <!-- section id="login">
                        @Html.Partial("_LoginPartial")
                    </-->
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Search", "Search", "Applicant")</li>
                            <li>@Html.ActionLink("Admin", "Index", "Applicant")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
               @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p><br />&copy; @DateTime.Now.Year - Computer Science Employer - ASP.NET MVC4</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script type='text/javascript'>

            $('.subrow').hide();
            $('.mainrow').click(function () {
                $(this).find('section').html(function (_, value) { return value == '<span class="glyphicon glyphicon-plus"></span>' ? '<span class="glyphicon glyphicon-minus"></span>' : '<span class="glyphicon glyphicon-plus"></span>' });
                $(this).nextUntil('tr.mainrow').slideToggle(100, function () {
                });
            });
        </script>


        @RenderSection("scripts", required: false)
    </body>
</html>
