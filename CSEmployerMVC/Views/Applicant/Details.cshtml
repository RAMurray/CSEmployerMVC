@model CSEmployerMVC.Models.Applicant

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Applicant</legend>

    <dl class="dl-horizontal">
        <dt>First Name</dt>
        <dd>@Html.DisplayFor(model => model.FName)</dd>

        <dt>Last Name</dt>
        <dd>@Html.DisplayFor(model => model.LName)</dd>

        <dt>Date of Birth</dt>
        <dd>@Html.DisplayFor(model => model.DOB)</dd>

        <dt>City</dt>
        <dd>@Html.DisplayFor(model => model.City)</dd>

        <dt>State</dt>
        <dd>@Html.DisplayFor(model => model.State)</dd>

        <dt>Email</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>Phone Number</dt>
        <dd>@Html.DisplayFor(model => model.Phone)</dd>

        <dt>Job Title</dt>
        <dd>@Html.DisplayFor(model => model.JobTitle)</dd>

        <dt>Highest Degree</dt>
        <dd>@Html.DisplayFor(model => model.Degree)</dd>

        <dt>Years of Experience</dt>
        <dd>@Html.DisplayFor(model => model.YearsExp)</dd>

        <dt>Known Languages</dt>
        <dd>@Html.DisplayFor(model => model.Languages)</dd>

        <dt>Resume</dt>
        <dd>
    @if (Model.File == null) {
        @:None
    } else {
        <a id="downloadLink" href="@Url.Action("GetFile", "Applicant", new { id=Model.ID })" target="_blank" type="application/octet-stream" download="resume.pdf">Download</a>
    }
            
        </dd>
    </dl>

</fieldset>
