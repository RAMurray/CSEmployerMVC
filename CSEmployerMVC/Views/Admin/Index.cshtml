        </td>
    </tr>
}
</table>


<h3>Programming Language Table</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Language Name</th>
        <th></th>
    </tr>

@foreach (var pgl in Model.PGLanguages) {
    <tr>
        <td>@Html.DisplayFor(modelItem => pgl.ID)</td>
        <td>@Html.DisplayFor(modelItem => pgl.LanguageName)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { controller = "PGLanguage", id = pgl.ID}) |
            @Html.ActionLink("Details", "Details", new { controller = "PGLanguage", id = pgl.ID}) |
            @Html.ActionLink("Delete", "Delete", new { controller = "PGLanguage", id = pgl.ID})
        </td>
    </tr>
}
</table>
<button type="button" class="btn btn-primary" title="Add Language" value="AL" onclick="location.href='@Url.Action("Create", new { controller = "PGLanguage" })'">Add Programming Language</button>
