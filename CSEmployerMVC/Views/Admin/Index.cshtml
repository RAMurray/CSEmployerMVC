        <td>@Html.DisplayFor(modelItem => jb.Recruiter)</td>
        <td>@Html.DisplayFor(modelItem => jb.Location)</td>
        <td>@Html.DisplayFor(modelItem => jb.DatePosted)</td>
        <td>@Html.DisplayFor(modelItem => jb.reqDegree)</td>
        <td>@Html.DisplayFor(modelItem => jb.reqYearsExp)</td>
        <td>@Html.DisplayFor(modelItem => jb.reqPGLanguages)</td>
        <td>@Html.DisplayFor(modelItem => jb.TotalPayString)</td>
        <td>@Html.DisplayFor(modelItem => jb.Employer.CompanyName)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { controller = "Job", id = jb.ID}) |
            @Html.ActionLink("Details", "Details", new { controller = "Job", id = jb.ID }) |
