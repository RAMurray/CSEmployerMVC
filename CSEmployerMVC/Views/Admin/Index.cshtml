@model CSEmployerMVC.Models.Admin

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">Admin Page</h2>

<h3>Applicant table</h3>
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Date of Birth</th>
        <th>Address</th>
        <th>Zip</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
        <th>Phone</th>
        <th>Fax</th>
        <th>Email</th>
        <th>Degree</th>
        <th>Known Languages</th>
        <th></th>
    </tr>

@foreach (var app in Model.Applicants) {
    <tr>
        <td>@Html.DisplayFor(modelItem => app.FullName)</td>
        <td>@Html.DisplayFor(modelItem => app.DOB)</td>
        <td>@Html.DisplayFor(modelItem => app.Address)</td>
        <td>@Html.DisplayFor(modelItem => app.Zip)</td>
        <td>@Html.DisplayFor(modelItem => app.City)</td>
        <td>@Html.DisplayFor(modelItem => app.State)</td>
        <td>@Html.DisplayFor(modelItem => app.Country)</td>
        <td>@Html.DisplayFor(modelItem => app.Phone)</td>
        <td>@Html.DisplayFor(modelItem => app.Fax)</td>
        <td>@Html.DisplayFor(modelItem => app.Email)</td>
        <td>@Html.DisplayFor(modelItem => app.HighestDegree)</td>
        <td>@Html.DisplayFor(modelItem => app.KnownLanguages)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { controller = "Applicant", id = app.ID }) <br />
            @Html.ActionLink("Details", "Details", new { controller = "Applicant", id = app.ID }) <br />
            @Html.ActionLink("Delete", "Delete", new { controller = "Applicant", id = app.ID })
        </td>
    </tr>
}

</table>

<h3>Resume</h3>
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Resume</th>
        <th></th>
    </tr>
@foreach (var res in Model.Resumes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => res.Applicant.FullName)
        </td>
        <td>
            @Html.ActionLink("View Resume", "Pdf", new { controller = "Resume", id = res.ApplicantID })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { controller = "Resume", id = res.ApplicantID }) |
            @Html.ActionLink("Details", "Details", new { controller = "Resume", id = res.ApplicantID }) |
            @Html.ActionLink("Delete", "Delete", new { controller = "Resume", id = res.ApplicantID })
        </td>
    </tr>
}
</table>


