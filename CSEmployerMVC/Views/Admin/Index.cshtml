        <th>#</th>
        <th>Company Name</th>
        <th>Address</th>
        <th>Zip</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
        <th>Phone</th>
        <th>Fax</th>
        <th>Email</th>
        <th>Password</th>
        <th></th>
    </tr>

@foreach (var emp in Model.Employers) {
    <tr>
        <td>@Html.DisplayFor(modelItem => emp.ID)</td>
        <td>@Html.DisplayFor(modelItem => emp.CompanyName)</td>
        <td>@Html.DisplayFor(modelItem => emp.Address)</td>
        <td>@Html.DisplayFor(modelItem => emp.Zip)</td>
        <td>@Html.DisplayFor(modelItem => emp.City)</td>
        <td>@Html.DisplayFor(modelItem => emp.State)</td>
        <td>@Html.DisplayFor(modelItem => emp.Country)</td>
        <td>@Html.DisplayFor(modelItem => emp.Phone)</td>
        <td>@Html.DisplayFor(modelItem => emp.Fax)</td>
        <td>@Html.DisplayFor(modelItem => emp.Email)</td>
        <td>@Html.DisplayFor(modelItem => emp.ePassword)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { controller = "Employer", id = emp.ID}) <br />
