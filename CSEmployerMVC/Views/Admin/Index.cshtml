    <tr>
        <th>Job Title</th>
        <th>Department</th>
        <th>Position Type</th>
        <th>Hours per Week</th>
        <th>Recruiter</th>
        <th>Location</th>
        <th>Date Posted</th>
        <th>Required Degree</th>
